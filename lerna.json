{ 
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "yes": false,
      "ignoreChanges": [
        "**/*.spec.ts"
      ],
      "message": "chore(release): publish"
    }
  },
  "version": "independent"
}
