{
  "kind": "collectionType",
  "collectionName": "blog_authors",
  "info": {
    "singularName": "blog-author",
    "pluralName": "blog-authors",
    "displayName": "Author",
    "description": "Create authors for your content"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "email": {
      "type": "email"
    },
    "blog-articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::blog-article.blog-article",
      "mappedBy": "blog-author"
    }
  }
}